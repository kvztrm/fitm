print("[FishScanner] Loaded " .. #fishRefs .. " fish positions")

-- Get text from ProximityPrompt
local function getPromptText(fishPart)
    if not fishPart then return nil end

    local prompt = fishPart:FindFirstChild("PPPart_PP")
    if not prompt or not prompt:IsA("ProximityPrompt") then return nil end

    local objText = prompt.ObjectText or ""
    local actText = prompt.ActionText or ""
    local full = (objText .. " " .. actText):gsub("%s+", " ")

    return full
end

-- Accurate percentage extraction
local function extractPercentage(text)
    if not text or text == "" then return nil end

    local clean = text:lower()
    local patterns = {
        "(%d+%.?%d*)%%",
        "(%d+) ?%%",
        "(%d+%.?%d*) ?percent",
        "%% ?(%d+)",
        "(%d+)"  -- fallback, but only if no other matches
    }

    for _, pat in ipairs(patterns) do
        local numStr = clean:match(pat)
        if numStr then
            local v = tonumber(numStr)
            if v and v >= THRESHOLD then
                if DEBUG then
                    print("[PARSE OK] " .. v .. "% from text: " .. text:sub(1, 100))
                end
                return v
            end
        end
    end

    if DEBUG then
        print("[PARSE FAIL] No valid percentage in: " .. text:sub(1, 100))
    end
    return nil
end

-- Send one grouped webhook
local function sendCombinedWebhook(highFishes)
    if #highFishes == 0 then return end

    local message = "**High % Fish Detected (" .. #highFishes .. " total):**\n"
    for i, fish in ipairs(highFishes) do
        message = message .. i .. ". **" .. fish.name .. "** - **" .. fish.percent .. "%**\n"
    end

    local payload = { content = message }

    local success, response = pcall(function()
        return request({
            Url = WEBHOOK_URL,
            Method = "POST",
            Headers = {["Content-Type"] = "application/json"},
            Body = HttpService:JSONEncode(payload)
        })
    end)

    if success then
        print("[WEBHOOK] Sent grouped list! Status: " .. (response.StatusCode or "no code"))
    else
        warn("[WEBHOOK] Failed: " .. tostring(response))
    end
end

-- Main scan loop
local lastScan = 0

RunService.Heartbeat:Connect(function()
    local now = tick()
    if now - lastScan < SCAN_INTERVAL then return end
    lastScan = now

    if DEBUG then print("[SCAN START] Full check...") end

    local highFishes = {}

    for _, entry in ipairs(fishRefs) do
        local part = entry.part
        if not part then
            if DEBUG then print("[SKIP] Missing part: " .. entry.name) end
            continue
        end

        local text = getPromptText(part)
        if text then
            if DEBUG then
                print("[TEXT FROM] " .. entry.name .. ": \"" .. text .. "\"")
            end

            local value = extractPercentage(text)
            if value then
                table.insert(highFishes, {name = entry.name, percent = value})
                if DEBUG then
                    print("[DETECT] " .. entry.name .. " = " .. value .. "%")
                end
            end
        else
            if DEBUG then print("[NO TEXT] " .. entry.name) end
        end
    end

    sendCombinedWebhook(highFishes)

    if DEBUG then print("[SCAN END] Found " .. #highFishes .. " high % fish") end
end)

print("[FishScanner] Active - grouped webhook - scan every " .. SCAN_INTERVAL .. " seconds")
